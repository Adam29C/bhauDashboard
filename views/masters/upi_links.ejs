<script>
  function sendOTP() {
    const name = document.getElementById("upiName").value;
    if (name != "") {
      $("#upiDiv").css("display", "none");
      $("#OTPdiv").css("display", "block");
      $.ajax({
        type: "POST",
        url: "/masters/OTPsend",
        success: function (result) {
          $("#upiDiv").css("display", "none");
          $("#OTPdiv").css("display", "block");
        },
      });
    } else {
      $("#errorText").html("UPI ID Cannot be Empty");
    }
  }

  function insertdata() {
    const name = document.getElementById("upiName").value;
    const status = document.getElementById("status143").value;
    const input = document.getElementById("formFile");

    if (!name || !status || !input.files[0]) {
      toastr["error"](
        "Please fill all fields and select an image",
        "Bhau777 Bets Games"
      );
      return;
    }

    const formData = new FormData();
    formData.append("bankName", name);
    formData.append("status", status);
    formData.append("upibarCode", input.files[0]);

    $.ajax({
      type: "POST",
      url: "/masters/upiAdd",
      data: formData,
      processData: false,
      contentType: false,
      success: function (result) {

        let message = result.message;

        if (result.status === 1) {
          Custombox.modal.close();
          let data = result.data;

          let id = "mb" + data._id;
          let activeStatuss = data.is_Active;
          let dispText = activeStatuss ? "Active" : "Disabled";
          let bankId = "'" + data._id + "'";
          let button = activeStatuss
            ? '<button class="btn btn-danger waves-effect waves-light btn-xs" onclick="blockUnblock(' +
              bankId +
              ',false)"><i class="fas fa-user-alt-slash mr-1"></i><span>Block</span></button>'
            : '<button class="btn btn-purple waves-effect waves-light btn-xs" onclick="blockUnblock(' +
              bankId +
              ',true)"><i class="fas fa-user mr-1"></i><span>Un-Block</span></button>';

          let html =
            '<tr id="' +
            id +
            '">' +
            "<td>" +
            data.UPI_ID +
            "</td>" +
            "<td>" +
            dispText +
            "</td>" +
            "<td>" +
            button +
            "</td>" +
            '<td><button class="btn btn-danger waves-effect waves-light btn-xs" onclick="RemoveUsers(\'' +
            data._id +
            '\')"><i class="fas fa-trash"></i>&nbsp;&nbsp;<span>Delete</span></button></td>' +
            "</tr>";

          $("#bankTable").append(html);
          window.location.reload();
          toastr["success"](message, "Bhau777 Bets Games");
        } else {
          toastr["error"](message, "Bhau777 Bets Games");
        }
      },
      error: function (xhr, status, error) {
        toastr["error"](
          "An error occurred. Please try again.",
          "Bhau777 Bets Games"
        );
      },
    });
  }

  function blockUnblock(bankId, blockStatus, stat) {
    const id = bankId;
    const status = blockStatus;
    $.ajax({
      type: "POST",
      url: "/masters/disable_upi",
      data: { id: id, status: status, stat: stat },
      success: function (result) {
        let message = result.message;
        if (result.status === 1) {
          window.location.reload();
        } else {
          toastr["warning"](message, "Bhau777 Bets Games");
        }
      },
    });
  }

